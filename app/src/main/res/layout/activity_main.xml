<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.csanchez.ift2905_wordonthestreet.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/cat1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buzzfeed, CNN" />

        <Button
            android:id="@+id/cat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engadget, The Verge" />

        <Button
            android:id="@+id/cat3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Polygon, IGN" />

        <Button
            android:id="@+id/allSources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See All Sources" />

        <Button
            android:id="@+id/gaming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See Gaming Sources" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
